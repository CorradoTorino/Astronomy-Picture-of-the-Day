<Window x:Class="AstronomyPictureOfTheDay.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Astronomy Picture of The Day" Height="750" Width="525" Icon="app.ico">
    <StackPanel>
        <DatePicker x:Name="DatePicker"
                    SelectedDate="2020-08-26"
                    SelectedDateChanged="DatePicker_OnSelectedDateChanged"></DatePicker>
        <TextBlock x:Name="TitleTextBox"
                   TextWrapping="Wrap"
                   Margin="5"
                   HorizontalAlignment="Center"
                   FontWeight="Bold"
                   >
            Title of the Picture
        </TextBlock>
        <TextBlock x:Name="ExplanationTextBox"
                       TextWrapping="Wrap"
                       Margin="5"
                       HorizontalAlignment="Center">
            ...Explanation here...
        </TextBlock>
        <Image Name="ImageViewer1" Height="400" Width="400" />
    </StackPanel>
</Window>